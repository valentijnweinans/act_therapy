<div style="font-family: Georgia, serif; max-width: 560px; margin: 0 auto; background: #ffffff;">

  <!-- Header -->
  <div style="background: #98A086; padding: 32px 40px;">
    <p style="margin: 0; color: #ffffff; font-size: 13px; letter-spacing: 0.08em; text-transform: uppercase;">
      <%= @client_name %>
    </p>
  </div>

  <!-- Body -->
  <div style="padding: 40px; border: 1px solid #e8e0d6; border-top: none;">
    <p style="margin: 0 0 16px; font-size: 17px; color: #3a2e25;">
      Beste <%= @form_data[:naam] %>,
    </p>
    <p style="margin: 0 0 32px; font-size: 15px; line-height: 1.7; color: #5a4a3a;">
      <%= @message %>
    </p>

    <!-- Samenvatting -->
    <div style="border-left: 3px solid #A76D5E; padding: 16px 20px; background: #faf7f4;">
      <p style="margin: 0 0 8px; font-size: 12px; color: #A76D5E; letter-spacing: 0.06em; text-transform: uppercase;">
        Jouw bericht
      </p>
      <p style="margin: 0; font-size: 14px; color: #5a4a3a; white-space: pre-line; line-height: 1.6;">
        <%= @form_data[:bericht] %>
      </p>
    </div>

    <p style="margin: 32px 0 0; font-size: 14px; color: #5a4a3a; line-height: 1.6;">
      Met vriendelijke groet,<br>
      <strong style="color: #3a2e25;"><%= @client_name %></strong>
    </p>
  </div>


</div>
